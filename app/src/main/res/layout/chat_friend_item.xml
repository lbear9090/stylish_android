<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_chat_friend_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/avatarplaceholderprofile" />

    <com.stylelist.CustomViews.CustomFontTextView
        android:id="@+id/text_chat_friend_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:customFont="GT-Walsheim-Regular.ttf"
        android:layout_toEndOf="@+id/image_chat_friend_profile"
        android:layout_toRightOf="@+id/image_chat_friend_profile"
        android:textColor="@color/black"
        android:textSize="@dimen/font_medium2"
        android:text="TextView" />

    <ImageView
        android:id="@+id/check_chat_friend_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_checked_black" />
</RelativeLayout>