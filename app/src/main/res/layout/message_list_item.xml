<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_message_item_profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/avatarplaceholderprofile" />

    <com.stylelist.CustomViews.CustomFontTextView
        android:id="@+id/text_message_item_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_message_item_profile"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/image_message_item_profile"
        android:layout_toRightOf="@+id/image_message_item_profile"
        android:text=""
        app:customFont="GT-Walsheim-Regular.ttf"
        android:textColor="@color/black"
        android:textSize="@dimen/font_medium2"/>

    <com.stylelist.CustomViews.CustomFontTextView
        android:id="@+id/text_message_item_last_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_message_item_timestamp"
        android:layout_alignLeft="@+id/text_message_item_timestamp"
        android:layout_alignStart="@+id/text_message_item_timestamp"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/font_medium" />

    <com.stylelist.CustomViews.CustomFontTextView
        android:id="@+id/text_message_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_message_item_profile"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/image_message_item_profile"
        android:layout_toRightOf="@+id/image_message_item_profile"
        android:text=""
        app:customFont="GT-Walsheim-Regular.ttf"
        android:textSize="@dimen/font_small2"
        android:textColor="@color/black_semi_transparent" />

</RelativeLayout>