<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stylelist.Activity.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/white">

        <com.stylelist.CustomViews.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Edit Profile"
            android:textColor="@color/black"
            android:textSize="@dimen/font_medium3"
            app:customFont="GT-Walsheim-Medium.ttf"/>

        <com.stylelist.CustomViews.CustomFontButton
            android:id="@+id/btn_edit_profile_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:text="Done"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="@dimen/font_medium1"
            app:customFont="GT-Walsheim-Regular.ttf"/>

        <com.stylelist.CustomViews.CustomFontButton
            android:id="@+id/btn_edit_profile_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:text="Save"
            android:textColor="@color/black"
            android:textAllCaps="false"
            app:customFont="GT-Walsheim-Regular.ttf"
            android:textSize="@dimen/font_medium1" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout3"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="114dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <ImageView
                    android:id="@+id/image_edit_profile_header"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_photo" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_edit_proifle_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/avatarplaceholderprofile"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium2"
                    app:customFont="GT-Walsheim-Regular.ttf"/>

                <EditText
                    android:id="@+id/edit_edit_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/gold_theme_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Mention"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium2"
                    app:customFont="GT-Walsheim-Regular.ttf"/>

                <EditText
                    android:id="@+id/edit_edit_profile_mention"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/gold_theme_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Bio"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium2"
                    app:customFont="GT-Walsheim-Regular.ttf"/>

                <EditText
                    android:id="@+id/edit_edit_profile_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/gold_theme_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="City"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium2"
                    app:customFont="GT-Walsheim-Regular.ttf"/>

                <EditText
                    android:id="@+id/edit_edit_profile_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/gold_theme_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Country"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium2"
                    app:customFont="GT-Walsheim-Regular.ttf"/>

                <Spinner
                    android:id="@+id/spinner_edit_profile_location_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:entries="@array/countries"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:popupBackground="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Website"
                    app:customFont="GT-Walsheim-Regular.ttf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium2" />

                <EditText
                    android:id="@+id/edit_edit_profile_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/gold_theme_color" />
            </LinearLayout>

            <com.stylelist.CustomViews.CustomFontButton
                android:id="@+id/btn_edit_profile_styles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="16dp"
                android:text="Your Styles"
                app:customFont="GT-Walsheim-Regular.ttf"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/font_medium2" />

            <com.stylelist.CustomViews.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Private Information, only you see this"
                android:textColor="@color/black_semi_transparent"
                android:gravity="center"
                app:customFont="GT-Walsheim-Regular.ttf"
                android:textSize="@dimen/font_medium1"
                android:textAllCaps="true"
                android:padding="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Email"
                    app:customFont="GT-Walsheim-Regular.ttf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium2" />

                <EditText
                    android:id="@+id/edit_edit_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/gold_theme_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Gender"
                    app:customFont="GT-Walsheim-Regular.ttf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium2" />

                <Spinner
                    android:id="@+id/edit_profile_gender_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/genders"
                    android:popupBackground="@color/white" />
            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginTop="1dp"-->
                <!--android:background="@color/white"-->
                <!--android:gravity="center_vertical"-->
                <!--android:orientation="horizontal"-->
                <!--android:paddingEnd="12dp"-->
                <!--android:paddingStart="12dp">-->

                <!--<com.stylelist.CustomViews.CustomFontTextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="3"-->
                    <!--android:text="Birthday"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textSize="@dimen/font_medium2" />-->

                <!--<com.stylelist.CustomViews.CustomFontTextView-->
                    <!--android:id="@+id/text_edit_profile_birthday"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:textSize="@dimen/font_medium2"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:textColor="@color/gold_theme_color" />-->
            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Paypal"
                    app:customFont="GT-Walsheim-Regular.ttf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium2" />

                <EditText
                    android:id="@+id/edit_edit_profile_paypal_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/gold_theme_color" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
