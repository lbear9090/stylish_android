<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:padding="4dp">

    <ImageView
        android:id="@+id/image_menu_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        app:srcCompat="@drawable/ic_popular" />

    <com.stylelist.CustomViews.CustomFontTextView
        android:id="@+id/text_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/image_menu_icon"
        android:layout_toRightOf="@+id/image_menu_icon"
        android:text="Popular"
        app:customFont="GT-Walsheim-Regular.ttf"
        android:textColor="@color/black"
        android:textSize="@dimen/font_medium2"/>
</RelativeLayout>