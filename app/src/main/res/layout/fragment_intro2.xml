<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context="com.stylelist.Fragments.Intro2Fragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:src="@drawable/intro_2" />

    <com.stylelist.CustomViews.CustomFontTextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        app:customFont="GT-Walsheim-Regular.ttf"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/intro_2_text"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium1" />
</RelativeLayout>
