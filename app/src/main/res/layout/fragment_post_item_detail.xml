<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.stylelist.Fragments.PostItemDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="48dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/imageView17"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small2" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_post_item_detail_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/avatarplaceholderprofile" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_clock" />

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/image_post_item_detail_profile"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/image_post_item_detail_profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium1" />

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/image_post_item_detail_profile"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/image_post_item_detail_profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <me.relex.circleindicator.CircleIndicator
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Beautiful white dress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium3"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item"
                    android:textColor="@color/black_semi_transparent"
                    android:textSize="@dimen/font_medium2" />

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Shoes"
                    android:textColor="@color/black_semi_transparent"
                    android:textSize="@dimen/font_medium2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textColor="@color/black_semi_transparent"
                    android:textSize="@dimen/font_medium2" />

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textView35"
                    android:paddingLeft="8dp"
                    android:text="(see size guide)"
                    android:textColor="@color/black_semi_transparent"
                    android:textSize="@dimen/font_medium2" />

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="42"
                    android:textColor="@color/black_semi_transparent"
                    android:textSize="@dimen/font_medium2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/black_semi_transparent"
                    android:textSize="@dimen/font_medium2" />

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView37"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:padding="8dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Condition"
                    android:textColor="@color/black_semi_transparent"
                    android:textSize="@dimen/font_medium2" />

                <com.stylelist.CustomViews.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Pre-owned"
                    android:textColor="@color/black_semi_transparent"
                    android:textSize="@dimen/font_medium2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:padding="16dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:id="@+id/textView40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="DELIVERY OPTIONS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium3"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView40"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meet in person"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="No"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shipping"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Yes"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:id="@+id/textView47"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirm your address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView47"
                            android:textColor="@color/black_semi_transparent"
                            android:textSize="@dimen/font_medium2" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <com.stylelist.CustomViews.CustomFontTextView
                    android:id="@+id/textView41"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="TOTAL"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium3"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView41"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="$653"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item price"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="$5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shipping"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />

                        <com.stylelist.CustomViews.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="$658"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_medium2" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.stylelist.CustomViews.CustomFontButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@color/black"
                android:text="Buy"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium3" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>
